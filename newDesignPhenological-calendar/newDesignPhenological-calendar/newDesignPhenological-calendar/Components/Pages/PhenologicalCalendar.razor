    public void popit()
    {
        // clay();

        if (searchText != "")
        {
            info = callDB.calldbkak($"SELECT * FROM pests WHERE namess = '{searchText}'");

            if (info[1] == null)
            {
                notFound = "Вредитель не найден";
            }
            else
            {
                namess = info[0];
                theory = info[1];
                linkImg = info[2];
                linkWIki = info[3];
            }
        }
        else
        {
            Console.WriteLine($"Пользователь написал {searchText}");
        }

    }
}

